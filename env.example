# Configuração ServiceNow
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=your-api-username
SERVICENOW_PASSWORD=your-api-password

# Configuração Google Chat
GOOGLE_CHAT_WEBHOOK=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN
GOOGLE_CHAT_SPACE=SRE Team

# Configuração de Logs
ANSIBLE_LOG_LEVEL=INFO
ANSIBLE_LOG_FILE=/var/log/ansible/servicenow_monitor.log

# Configuração de Monitoramento
CHECK_INTERVAL=15
SLA_WARNING_THRESHOLD=60
STALE_TICKET_THRESHOLD=1440

# Configuração de Retry
MAX_ATTEMPTS=3
RETRY_DELAY=5
RETRY_BACKOFF=2
